<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-sm-3 search_results">
      <%= simple_form_for [@user] do |f| %>
        <%= f.input :first_name, input_html: { class: 'search-fields' }  %>
        <%= f.input :last_name, input_html: { class: 'search-fields' }  %>
        <%= f.input :home_town, label: 'Hometown', input_html: { class: 'search-fields' }  %>
        <%= f.input :current_city, input_html: { class: 'search-fields' }  %>
        <%= f.input :about, placeholder: "Provide a short description of yourself.", input_html: { class: 'search-fields' }  %>
        <%= f.input :photo, label: 'Profile photo',  as: :file %>
        <%= f.submit "Submit", class: "btn search-button-styled mt-2 form-control" %>
      <% end %>
    </div>
  </div>
</div>
