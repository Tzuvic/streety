<div class="container">
  <div class="row">
    <div class="col-sm-4 offset-sm-4 search_results">
      <h1>Search results for <%= params[:query]%></h1>
      <a href="#">Mexico City</a> > <a href="#">Tacos</a>

      <div
           class="mb-3"
           id="map"
           style="width: 100%; height: 400px;"
           data-markers="<%= @markers.to_json %>"
           data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

      <% distance_value = 0 %>
      <% @search_results.each do |result| %>

      <div class="search-card">
          <div class="d-flex justify-content-between">
            <div>
              <%= link_to result.name, food_stall_path(result) %> | <a href=""><%= result.main_category %></a><br>
              <% result.rating.times do %>
                ⭐️
              <% end %>

              <% if result.reviews.count == 1 %>
                <span>1 review</span>
              <% else %>
                <span><%= result.reviews.count %> reviews</span>
              <% end %>
            </div>
            <p><%= @distances_array[distance_value] %> km</p>
            <% distance_value += 1 %>
          </div>
      </div>
      <% end %>
    </div>
  </div>
</div>



