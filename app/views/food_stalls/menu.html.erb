<div class="container menu pt-3">
  <div class="row">
    <div class="col-sm-6 offset-sm-3">

<h2 class="title"><%= @food_stall.name %></h2>
<h2>Translated Menu</h2>

<% @food_stall.food_stall_categories.each do |food_stall_category| %>
  <%= image_tag("https://images.unsplash.com/photo-1551504734-5ee1c4a1479b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2850&q=80", size: "75x75") %>
  <h2 style="margin-bottom: 0px;"><%= food_stall_category.food_category.name.capitalize %></h2>
  <p><%= food_stall_category.food_category.description %></p>

  <ul>
  <% food_stall_category.food_category.food_items.each do |item| %>
    <li>- <%= item.name %>: <%= item.description %></li>
  <% end %>
  </ul>
  <hr>
<% end %>

    </div>

  </div>

</div>





