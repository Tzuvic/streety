<%= form_tag search_results_food_stalls_path, method: :get, class: "form-inline" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "What do you want to eat?"
  %>
  <%= submit_tag "Search", class: "btn mb-3", style: "background-color: #EB6043; color: white; justify-contents: space-around;" %>
<% end %>


