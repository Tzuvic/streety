<div class="container mt-3">
  <div class="row">
    <div class="col-sm-6 offset-sm-3">

      <div class="show text-center">
        <h1>Profile</h1>
      </div>

      <div class="profile" style="display: flex; padding-top: 5px;">
        <div style="height: 180px; width: 200; display: flex; flex-direction: column; justify-content: space-between; text-align: center;">
          <% if @user.photo.attached? %>
            <%= cl_image_tag @user.photo.key, gravity: :face, crop: :thumb, height: 400, width: 400, class: "avatar-small" %>
          <% else %>
            <%= image_tag "https://res.cloudinary.com/vc334/image/upload/v1589058566/ldy28x5xt9skq4f2gdznnrs8p490.png", height: 150, width: 200, crop: :fill %>
          <% end %>
        </div>
        <div class="profile-info" style="margin-left: 16px; margin-top: 16px;">
          <p style="font-weight: 500; margin-bottom: 2px;"><%= @user.first_name %> <%= @user.last_name %></p>
          <p style="margin-bottom: 2px;">Lives in <span style="font-weight: 500;"><%= @user.current_city %></span></p>
          <p>From <span style="font-weight: 500;"><%= @user.home_town %></span></p>
        </div>
      </div>

      <div class="vouches" style="width: 600px">
        <% if @user.received_vouches.count == 0 %>
          <h4>No vouches yet</h4>
        <% elsif @user.received_vouches.count == 1 %>
          <h4>1 vouch</h4>
        <% else %>
          <h4><%= @user.received_vouches.count %> vouches </h4>
        <% end %>
        <div class="vouches">
          <%= render 'shared/vouches' %>
        </div>
      </div>
       <hr>

    <h4>Recommendations (<%= current_user.recommendations.count %>)</h4>

    <% if @recommendations_list.present? %>
      <div class="container">
        <div class="row">
          <div class="col-sm-4 offset-sm-4 search_results">

            <div class="text-center mt-3">
            <h1 style="font-size: 18px; font-weight: 500;">Recommendations</h1>
            </div>

            <% list_counter = 1 %>

          <% @recommendations_list.each do |result| %>
            <div class="search-card mb-3">
              <% if result.photos.attached? %>
                <div class="mb-2 mt-1">
                  <% result.photos.take(4).each do |photo| %>
                    <%= cl_image_tag photo.key, size:"70x70", style:"border-radius: 6px;" %>
                  <% end %>
                </div>
            <% end %>

            <div class="">

              <div class="search-flexbox">

                <div class="counter-styled">
                  <%= list_counter %>.
                  <%= link_to result.name, food_stall_path(result) %>
                </div>


            </div>



                  <div style="line-height: 14px;">
                    <% result.rating.times do %>
                      <i class="fas fa-star star-color" style="font-size: 12px;"></i>
                    <% end %>

                    <% if result.reviews.count == 0 %>
                      <span style="font-size: 14px; color: #484848; ">No reviews yet</span>
                    <% elsif result.reviews.count == 1 %>
                      <span style="font-size: 14px;">1 review</span>
                    <% else %>
                      <span style="font-size: 14px;"><%= result.reviews.count %> reviews</span>
                    <% end %>
                  </div>

                  <p style="margin: 0px; padding:0px; color: #4E4C54; font-size: 13px;"><%= result.main_category %></p>
                  <p style="margin: 0px; padding:0px; color: #4E4C54; font-size:10px;"><%= result.address %></p>


                  <% list_counter += 1 %>

              </div>




          </div>
          <hr>
          <% end %>
        <% else %>
          <h1>No food stalls recommended yet.</h1>
        <% end %>
        </div>
      </div>
    </div>








